<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/clothImageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:contentDescription="@string/image"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/likeButton"
        tools:background="@color/black"
        />

    <ImageButton
        android:id="@+id/likeButton"
        android:layout_width="@dimen/like_button_size"
        android:layout_height="@dimen/like_button_size"
        android:layout_margin="20dp"
        android:contentDescription="@string/like"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/footerExploreButton"
        android:background="@android:color/holo_green_dark"
        />

    <ImageButton
        android:id="@+id/rejectButton"
        android:layout_width="@dimen/like_button_size"
        android:layout_height="@dimen/like_button_size"
        android:layout_margin="20dp"
        android:contentDescription="@string/like"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/footerExploreButton"
        android:background="@android:color/holo_red_dark"
        />

    <include
        layout="@layout/layout_footer"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
    